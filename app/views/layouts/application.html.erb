<!DOCTYPE html>
<html>
  <head>
    <title>OrganizerApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% if logged_in? %>
  <div>
    <nav class="navbar">
    <%= link_to "Log out", logout_path, method: :delete, class: 'navlink' %>
    <%= link_to "Add a list", new_list_path, class: 'navlink' %>
    </nav>
  </div>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
